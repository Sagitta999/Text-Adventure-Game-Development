def round_1():
    time.sleep(2)
    print(f'\nPhone: Detective {Your_name}, it is an emergency stituation, a man got murdered at 2140 Taylor Street, we need your help!')

    time.sleep(2)
    print("\nPhone: By the way, I think you have already meet Winston now, you will solve this problem with him this time.")
    
    a="A. I am on my way!"
    b="B. It's Saturday night! Don't bother me!"
    time.sleep(2)
    answer1=input(f"What you gonna say? \n\n{a}\n{b}\n")
    
    if answer1 == "I am on my way!" or answer1 =='A' or answer1=='a':
        time.sleep(2)
        print(f"({Your_name} finished the last round and got in the car with Winston...)")
        round_4()
    elif answer1==("It's Saturday night! Don't bother me!") or answer1=='B' or answer1=='b':
        time.sleep(2)
        print(f"""\n (You hung up the phone and contiune drinking...Winston seems very disappointed,He doesn\'t undetstand why {Your_name} acted like this, but there\'s no time to waste, he went out the bar...)""")
        round_2()
        round_3()
        
    else:
        time.sleep(2)
        print("Something went wrong...")    
    
    

def round_2():
    time.sleep(2)
    print("""\nYou got fired because of dereliction of duty...""")
    time.sleep(2)
    print("""\nNext day you received a phone call, the guy on the other end of the line required you to do something for him.""")
    time.sleep(2)
    print("""\nHe asked you for your prize...
    
    """)
    
    e="A.100k"
    f="B.200k"
    g="C.25k"
    
    answer3=input(f'How much money do you need? \n\n{e}\n{f}\n{g}\n')
    answer3=answer3.lower()
    if answer3=="100k" or answer3=="a": 
        time.sleep(2)
        print(f"""\n{Your_name}: 100K without negotiation!""")
        time.sleep(2)
        print("""\nMr.nobody: Deal! all you need to do is steal some files in police station and give it to me.""")
    
    elif answer3=="200k" or answer3=="b": 
        time.sleep(2)
        print(f"""\n{Your_name}: 200K without negotiation!""")
        time.sleep(2)
        print("""\nMr.nobody: Now you pissed me off...""")
        time.sleep(2)
        print("\n(Mr.nobody hung up the phone...)")
        time.sleep(2)
        print("\n(At night, as usual, you enter your favorite bar to get drunk.)") 
        time.sleep(2)
        print("(After 2 shots of vodka, someone stabbed you all of a sudden...)") 
        fail_2()
        
    elif answer3=="25k" or answer3=="c":
        time.sleep(2)
        print(f"""\n{Your_name}: 25K.""")
        time.sleep(2)
        print("\nMr.nobody:It seems like you can't handle this job...")
        time.sleep(2)
        print("\n(Mr.nobody hung up the phone...)")
        time.sleep(2)
        print("\n(You just got fired and no source of income. However, all you care about is nothing but drinking and helling around...)")
        time.sleep(2)
        print("\nFinally, you become a hobo living on the street...")
        time.sleep(2)
        fail_2()
    else:
        time.sleep(2)
        print("Something went wrong")
        fail_2()
        
        
def fail_2():
    time.sleep(2)
    print('\nYou are wasted!')
    zz="A.Hell yes!"
    zzz="B.No!"
    AnswerZ=input(f"\nWould you like to play again? \n\n{zz}\n{zzz}\n ")
    AnswerZ=AnswerZ.lower()
    
    if  AnswerZ=="yes" or AnswerZ=="hell yes!" or AnswerZ=="a":

        time.sleep(3)
        print("\nNow Loading...")

        time.sleep(2)
        print("\nLet's back to the beginning. Reminder: All your choice will cause different result and ending, you can play several times to see it. ")
        round_2()

    else:
        print(f'\nThanks for your playing {Your_name}!')
        

def round_3():
    time.sleep(3)
    print("""\nNow you decided to work with criminal, you bribed guard and slipped into police station at a quite night..""")
    time.sleep(3)
    print("""\nWhen you successfully get in the police station, you have no idea where the files at, now you need to choose which room you need to go
    
    A.Sergeant's office
    B.Evidence room
    C.Detention room
    """)

    chance_round_3=2
    while chance_round_3>0:
        Answer4=input("Where you gonna search?")
        Answer4=Answer4.lower()
        if Answer4=="a":
            time.sleep(2)
            print("\nYou entered Sergeant's office. Unfortunately, there's no files in the room, you have to go another one...")
            chance_round_3-=1
        elif Answer4=="b":
            time.sleep(2)
            print("\nYou entered evidence room. Unfortunately, there's no files in the room, you have to go another one...")
            chance_round_3-=1
        elif Answer4=="c":
            time.sleep(2)
            print(f"""\nYou entered Detention room, there's one man stood there, holding files in hand...""")
            time.sleep(2)
            print(f"""\nUndercover: I have been waiting you for so long, {Your_name}.""")
            time.sleep(2)
            print("\nUndercover: I can't bring this files out. Otherwise, I will lose trust as a undercover in police station.""")
            time.sleep(2)
            print("\nUndercover: I need you to take this file out and give it to boss...")
                  
            break
        else:
            time.sleep(2)
            print('something went wrong...')
    if chance_round_3==0:
        time.sleep(2)
        print(f"""\nA brunch of police suddenly show up face to face while you were trying to find the files，you saw a familiar face in front of police...""")
        time.sleep(2)
        print(f"""\n{Your_name}: Winston?""")
        time.sleep(2)
        print("\nWinston: You are under arrest!")
        
        fail_3()
        
    elif chance_round_3!=0:
        time.sleep(2)
        print(f"""\nYou are out of police station with the files. Next day, you met Mr.nobody and give the files to him...""")
        time.sleep(2)
        print(f"\nMr.nobody: Well done {Your_name}! 100k dollar will be in your account right away!")
        time.sleep(2)
        print("(You opened the notification on your phone, there's 100K dollar were transffered into your bank account...)")
        evil_success()


